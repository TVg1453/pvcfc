<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <title>Thông tin cá nhân</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <% const role = currentUser?.role || null; %>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f6f8;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 900px;
        margin: 50px auto;
        background: #fff;
        padding: 30px 40px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
      }

      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
      }

      .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        row-gap: 20px;
        font-size: 16px;
      }

      .info-label {
        font-weight: bold;
        color: #555;
        margin-bottom: 6px;
      }

      .info-value {
        color: #222;
      }

      .info-group {
        display: flex;
        flex-direction: column;
      }
      .back-btn,
      .submit-btn {
        margin-top: 40px;
        text-align: center;
      }

      .submit-btn button {
        padding: 10px 20px;
        background: #28a745;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        margin-right: 10px;
      }

      .submit-btn button:hover {
        background: #218838;
      }

      .back-btn a {
        display: inline-block;
        padding: 10px 20px;
        background: #007bff;
        color: #fff;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.3s;
      }

      .back-btn a:hover {
        background: #0056b3;
      }

      @media (max-width: 768px) {
        .info-grid {
          grid-template-columns: 1fr;
          text-align: left;
        }

        .info-label {
          text-align: left;
          padding: 0;
        }
      }
      input[type="text"],
      input[type="email"],
      input[type="file"],
      input[type="date"],
      textarea {
        width: 100%;
        padding: 10px;
        font-size: 15px;
        border: 1px solid #ccc;
        border-radius: 6px;
        background-color: #f9f9f9;
        transition: border-color 0.3s, box-shadow 0.3s;
        box-sizing: border-box;
      }

      input[type="text"]:focus,
      input[type="email"]:focus,
      input[type="file"]:focus,
      input[type="date"]:focus,
      textarea:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
        background-color: #fff;
        outline: none;
      }

      textarea {
        resize: vertical;
        min-height: 80px;
      }
    </style>
  </head>
  <body>
    <form action="/information" method="POST" enctype="multipart/form-data">
      <div class="container">
        <h1>Thông tin người dùng</h1>

        <!-- AVATAR -->
        <div style="text-align: center; margin-bottom: 20px">
          <img
            src="<%= user.avatar ? '/uploads/' + user.avatar : '/images/default-avatar.png' %>"
            alt="Avatar"
            style="
              width: 100px;
              height: 100px;
              border-radius: 50%;
              object-fit: cover;
              border: 2px solid #ccc;
            "
          />
          <% if (role !== "visitor") { %>
          <div style="margin-top: 10px">
            <label for="avatar">Đổi ảnh đại diện:</label>
            <input type="file" id="avatar" name="avatar" accept="image/*" />
          </div>
          <% } %>
        </div>

        <!-- FORM -->
        <div class="info-grid">
          <!-- Họ tên -->
          <div class="info-group">
            <label class="info-label">Họ tên:</label>
            <% if (["admin", "contractor", "hse_staff"].includes(role)) { %>
            <input
              type="text"
              name="full_name"
              value="<%= user.full_name || '' %>"
            />
            <% } else { %>
            <div><%= user.full_name || '—' %></div>
            <% } %>
          </div>

          <!-- Email -->
          <div class="info-group">
            <label class="info-label">Email:</label>
            <% if (["admin", "contractor", "hse_staff"].includes(role)) { %>
            <input type="email" name="email" value="<%= user.email || '' %>" />
            <% } else { %>
            <div><%= user.email || '—' %></div>
            <% } %>
          </div>

          <!-- Số điện thoại -->
          <div class="info-group">
            <label class="info-label">Số điện thoại:</label>
            <% if (["admin", "contractor", "hse_staff"].includes(role)) { %>
            <input type="text" name="phone" value="<%= user.phone || '' %>" />
            <% } else { %>
            <div><%= user.phone || '—' %></div>
            <% } %>
          </div>

          <!-- Tên đăng nhập -->
          <div class="info-group">
            <label class="info-label">Tên đăng nhập:</label>
            <% if (role === "admin") { %>
            <input
              type="text"
              name="username"
              value="<%= user.username || '' %>"
            />
            <% } else { %>
            <div><%= user.username || '—' %></div>
            <% } %>
          </div>

          <!-- Vai trò -->
          <div class="info-group">
            <label class="info-label">Vai trò:</label>
            <% if (role === "admin") { %>
            <input
              type="text"
              name="user_type"
              value="<%= user.user_type || '' %>"
            />
            <% } else { %>
            <div><%= user.user_type || '—' %></div>
            <% } %>
          </div>

          <!-- Công ty -->
          <div class="info-group">
            <label class="info-label">Công ty:</label>
            <% if (role === "admin") { %>
            <input
              type="text"
              name="company_name"
              value="<%= user.company_name || '' %>"
            />
            <% } else { %>
            <div><%= user.company_name || '—' %></div>
            <% } %>
          </div>

          <!-- Mã công ty -->
          <div class="info-group">
            <label class="info-label">Mã công ty:</label>
            <% if (role === "admin") { %>
            <input
              type="text"
              name="company_id"
              value="<%= user.company_id || '' %>"
            />
            <% } else { %>
            <div><%= user.company_id || '—' %></div>
            <% } %>
          </div>

          <!-- Phòng ban -->
          <div class="info-group">
            <label class="info-label">Phòng ban:</label>
            <% if (role === "admin") { %>
            <input
              type="text"
              name="department"
              value="<%= user.department || '' %>"
            />
            <% } else { %>
            <div><%= user.department || '—' %></div>
            <% } %>
          </div>

          <!-- Chức vụ -->
          <div class="info-group">
            <label class="info-label">Chức vụ:</label>
            <% if (role === "admin") { %>
            <input
              type="text"
              name="position"
              value="<%= user.position || '' %>"
            />
            <% } else { %>
            <div><%= user.position || '—' %></div>
            <% } %>
          </div>

          <!-- Trạng thái -->
          <div class="info-group">
            <label class="info-label">Trạng thái:</label>
            <% if (role === "admin") { %>
            <input type="text" name="status" value="<%= user.status || '' %>" />
            <% } else { %>
            <div><%= user.status || '—' %></div>
            <% } %>
          </div>

          <!-- Cấp độ an toàn -->
          <div class="info-group">
            <label class="info-label">Cấp độ an toàn:</label>
            <% if (["admin", "hse_staff"].includes(role)) { %>
            <input
              type="text"
              name="safety_level"
              value="<%= user.safety_level || '' %>"
            />
            <% } else { %>
            <div><%= user.safety_level || '—' %></div>
            <% } %>
          </div>

          <!-- Ghi chú -->
          <div class="info-group">
            <label class="info-label">Ghi chú:</label>
            <% if (["admin", "hse_staff", "contractor"].includes(role)) { %>
            <textarea name="notes"><%= user.notes || '' %></textarea>
            <% } else { %>
            <div><%= user.notes || '—' %></div>
            <% } %>
          </div>
        </div>

        <% if (role !== "visitor") { %>
        <div class="submit-btn">
          <button type="submit">
            <i class="fas fa-save"></i> Lưu thông tin
          </button>
        </div>
        <% } %>

        <div class="back-btn">
          <a href="javascript:history.back()">
            <i class="fas fa-arrow-left"></i> Quay lại
          </a>
        </div>
      </div>
    </form>
  </body>
</html>
